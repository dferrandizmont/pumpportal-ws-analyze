# ========================================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================================================================

# ========================================================================================
# LOGGING
# ========================================================================================
LOG_LEVEL=warn
LOG_TIMEZONE=Europe/Madrid
SUPPRESS_PUMP_WS_TRADE_PROCESSING_LOG=true

# Trade logging controls
TRADE_LOG_SAMPLE_EVERY=10        # Log only 1 of every N trades
TRADE_LOG_THROTTLE_MS=1000       # Minimum ms between logs per token

# ========================================================================================
# APPLICATION
# ========================================================================================
MONITOR_CREATOR_SELLS=true
CREATOR_SELL_THRESHOLD=80.0

# ========================================================================================
# PRICE SERVICE (COINGECKO)
# ========================================================================================
PRICE_REFRESH_MS=600000    # Interval (ms). Example: 600000 = 10 minutes

# ========================================================================================
# HTTP SERVER
# ========================================================================================
HTTP_PORT=3000

# ========================================================================================
# PUMPPORTAL WEBSOCKET
# ========================================================================================
# PUMP_PORTAL_WS_URL=wss://pumpportal.fun/api/data
# PUMP_PORTAL_API_KEY=   # Optional (leave empty if not used)

# ========================================================================================
# TRACKING
# ========================================================================================
TRACKING_ENABLED=true
TRACKING_ENTRY_DELAY_SEC=2      # Seconds
TRACKING_INACTIVITY_MIN=10      # Minutes
TRACKING_MAX_WINDOW_MIN=20      # Minutes
