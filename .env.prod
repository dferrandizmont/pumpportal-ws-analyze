# Production environment configuration

# Logging
LOG_LEVEL=warn
LOG_TIMEZONE=Europe/Madrid

# Reduce log volume for trades (keep visibility without flooding)
SUPPRESS_PUMP_WS_TRADE_PROCESSING_LOG=true
TRADE_LOG_THROTTLE_MS=1000
TRADE_LOG_SAMPLE_EVERY=10

# Application
MONITOR_CREATOR_SELLS=true
CREATOR_SELL_THRESHOLD=80.0

# Price Service (CoinGecko)
PRICE_REFRESH_MS=600000

# HTTP Server
HTTP_PORT=3000

# WebSocket (use default unless you need to change it)
# PUMP_PORTAL_WS_URL=wss://pumpportal.fun/api/data
# PUMP_PORTAL_API_KEY=

# Tracking (use seconds/minutes; internally converted to ms)
TRACKING_ENABLED=true
# Seconds
TRACKING_ENTRY_DELAY_SEC=2
# Minutes
TRACKING_INACTIVITY_MIN=10
TRACKING_MAX_WINDOW_MIN=20
