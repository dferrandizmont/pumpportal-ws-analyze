# PumpPortal WebSocket Configuration
PUMP_PORTAL_WS_URL=wss://pumpportal.fun/api/data
# Optional API key (leave empty if not used)
PUMP_PORTAL_API_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_TIMEZONE=Europe/Madrid

# Trade logging controls (to reduce log volume)
# Use numeric strings; 0 disables. Example: 1000 means 1s throttle per token
TRADE_LOG_THROTTLE_MS=0
# Log only 1 of every N trades per token; 0 or 1 disables sampling
TRADE_LOG_SAMPLE_EVERY=0
# Use literal "true" or "false"
SUPPRESS_PUMP_WS_TRADE_PROCESSING_LOG=false

# Application Configuration
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_DELAY_MS=5000
# Use literal "true" or "false"
MONITOR_CREATOR_SELLS=true

# Threshold for creator sell detection (percentage of creator-held tokens)
CREATOR_SELL_THRESHOLD=80.0

# Price Service (CoinGecko)
COINGECKO_SOL_ENDPOINT=https://api.coingecko.com/api/v3/coins/solana
# Refresh interval for price service (ms). Example: 600000 = 10 minutes
PRICE_REFRESH_MS=600000

# HTTP Server Configuration
HTTP_PORT=3000

